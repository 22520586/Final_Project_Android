<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:padding="24dp">

    <!-- Header with title and close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#0057B8" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tùy chọn"
            android:textColor="#0057B8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <!-- File Type Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiểu tài liệu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- First row - PDF, DOC -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- PDF button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pdf"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="PDF"
            android:textColor="#FFFFFF"
            app:backgroundTint="#D32F2F"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp" />

        <!-- DOC button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_doc"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="DOCX"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1976D2"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Second row - TXT, XLS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <!-- TXT button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_txt"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="TXT"
            android:textColor="#FFFFFF"
            app:backgroundTint="#7B1FA2"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp" />

        <!-- XLS button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_xls"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="XLSX"
            android:textColor="#FFFFFF"
            app:backgroundTint="#388E3C"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Third row - PPT, ZIP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- PPT button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ppt"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="PPTX"
            android:textColor="#FFFFFF"
            app:backgroundTint="#F57C00"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp" />

        <!-- ZIP button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zip"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ZIP"
            android:textColor="#FFFFFF"
            app:backgroundTint="#455A64"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Separator line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="24dp" />

    <!-- Settings option -->
    <LinearLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:paddingVertical="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_manage"
            android:layout_marginEnd="16dp"
            app:tint="#0057B8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt"
            android:textSize="16sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif" />
    </LinearLayout>

</LinearLayout>